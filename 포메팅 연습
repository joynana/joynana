highTemp = 12
dust = '보통'

#오답정리: 포메팅
#print('최저기온은%d도,낮 최고기온은 %d도 이며, 미세먼지 농도는 전국이 %str입니다'%(lowerTemp,highTemp,dust))
print('최저기온은%d도,낮 최고기온은 %d도 이며, 미세먼지 농도는 전국이 %s입니다'%(lowerTemp,highTemp,dust))

print('최저기온은{}도, 낮 최고기온은 {}도이며, 미세먼지 농도는 전국이{}입니다.'.format(lowerTemp,highTemp,dust))

word = 'success'
num = word.count('s')

#오답
# print('{}에는 s가 {}개 있습니다.'.format(word.upper(word),num)
# list에서 l.append('추가할 무엇')이 형식과 헛깔림

print('{}에는 s가 {}개 있습니다'.format(word.upper(),num))

print('%s에는 s가 %d개 있습니다.'%(word.upper(),num))

